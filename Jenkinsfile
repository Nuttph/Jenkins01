pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                echo 'Repo has been cloned successfully!'
            }
        }
        stage('Build') {
            steps {
                echo 'Running build step...'
            }
        }
        stage('Test') {
            steps {
                echo 'Running tests...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
            }
        }
    }
}
